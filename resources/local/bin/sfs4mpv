#!/bin/sh

# switch fullscreen on/off for mpv
conf=$HOME/.config/mpv/mpv.conf

[ ! $(grep '^fullscreen' "$conf") ] && notify-send 'error' 'fullscreen option not found in mpv.conf, maybe is commented out' && exit

if [ $(grep '^fullscreen=no' "$conf") ]; then
	sed -i 's/fullscreen=no/fullscreen=yes/' "$conf"
	notify-send 'mpv' 'open files in fullscreen on mpv'
else 
	if [ $(grep '^fullscreen=yes' "$conf") ]; then
	sed -i 's/fullscreen=yes/fullscreen=no/' "$conf"
	notify-send 'mpv' 'open files normally in mpv'
	fi
fi
